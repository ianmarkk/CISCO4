<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Quotes Randomizer"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtRandomQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Made by: Ian Mark Asuncion"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnSadQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category 1 Quotes"
            android:backgroundTint="#009688"/>

        <Button
            android:id="@+id/btnMovieQuotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category 2 Quotes"
            android:backgroundTint="#009688"/>

        <Button
            android:id="@+id/btnLyricsQuotes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Category 3 Quotes"
            android:backgroundTint="#009688"/>

        <Button
            android:id="@+id/btnFaveQuote"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:backgroundTint="#1E8513"
            android:enabled="false"
            android:text="Show Favorite Quote" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>